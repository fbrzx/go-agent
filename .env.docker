# Docker Compose Environment Variables
# Copy this file to .env in the same directory as docker-compose.yml

# Database passwords
POSTGRES_PASSWORD=mysecretpassword
NEO4J_PASSWORD=mysecretpassword
POSTGRES_DSN=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/go-agent?sslmode=disable

# LLM and Embedding Configuration
LLM_PROVIDER=ollama
EMBEDDING_PROVIDER=ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_HOST_CONTAINER=http://host.docker.internal:11434

# Ollama Models (used with ollama provider)
LLM_MODEL=llama3.1:8b
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=768

# OpenAI Configuration (uncomment and set if using openai provider)
# LLM_PROVIDER=openai
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1
